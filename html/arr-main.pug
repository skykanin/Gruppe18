extends layout

block content
    div#maindiv
        //h1 Festivaler:
        div.contentdivs#leftdiv
            table
                each festival in locals.festivals
                    tr.festivalrows
                        td= festival.navn
                        td= festival.start
                        td= festival.slutt
                    tr.concertrows
                        td(colspan='6').tablecontainer
                            table
                                tr
                                    th Band
                                    th Scene
                                    th Start
                                    th Varighet
                                    th Publikum
                                    th Bookingansvarlig
                                each concert in locals.concerts.getConcertsByFestivalID(festival.id)
                                    tr
                                        td= concert.band
                                        td= concert.scene
                                        td= concert.start
                                        td= concert.duration
                                        td= concert.audience
                                        td= concert.bookingansvarlig

        div.contentdivs#rightdiv
            table
                each user in locals.concerts.getConcertByConcertID(5).techs
                    tr.festivalrows
                        td= user.navn
                        td= user.tlf
                        td= user.email




block scripts
    script(src='../js/arr-main.js')

block head
    link(rel="stylesheet" type="text/css" href="../css/arr-main.css")

